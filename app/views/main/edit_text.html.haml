.page-header
  %h1 Edit

.row
  .col-sm-6
    =form_for :post,url:{action: :update},html:{class:'form-horizontal'} do |f|
      .form-group
        = f.label :title, class:'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :title, value:@post['title'], class:'form-control'
      .form-group
        = f.label :body, class:'col-sm-2 control-label'
        .col-sm-10
          .mcediv{style:'border: 1px solid #ddd;border-top:none;'}
            = f.text_area :body, class: "tinymce", row:40, cols:120, value:@post['body']
      .form-group
        = f.label :tags, class:'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :tags, value:@post['tags'].join(","), class:'form-control tags'
      :javascript
        $('.tags').select2({
          tags:[#{default_tags}]
        })
      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit nil, class:'btn btn-primary'

= tinymce skin:'bluth'
