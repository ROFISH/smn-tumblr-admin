.page-header
  %h1 Edit

.row
  .col-sm-6
    =form_for :post,url:{action: :update},html:{class:'form-horizontal'} do |f|
      -# Tumblr API doesn't allow edit of this?
      -#.form-group
        = f.label :artist, class:'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :artist, value:@post['artist'], class:'form-control'
      -#.form-group
        = f.label :album, class:'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :album, value:@post['album'], class:'form-control'
      -#.form-group
        = f.label :track_name, class:'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :track_name, value:@post['track_name'], class:'form-control'
      .form-group
        = f.label :caption, class:'col-sm-2 control-label'
        .col-sm-10
          .mcediv{style:'border: 1px solid #ddd;border-top:none;'}
            = f.text_area :caption, class: "tinymce", row:40, cols:120, value:@post['caption']
      .form-group
        = f.label :tags, class:'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :tags, value:@post['tags'].join(","), class:'form-control tags'
      :javascript
        $('.tags').select2({
          tags:[#{default_tags}]
        })
      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit nil, class:'btn btn-primary'

= tinymce skin:'bluth'
